- Insert a new doctor
INSERT INTO doctor (age, gender, spec) 
VALUES (35, 'Male', 'Cardiologist');

-- Retrieve all doctors
SELECT * FROM doctor;

-- Retrieve doctors by specific criteria
SELECT * FROM doctor WHERE did = 1;

-- Update doctor information
UPDATE doctor 
SET age = 40, gender = 'Female', spec = 'Pediatrician' 
WHERE did = 1;

-- Delete a doctor
DELETE FROM doctor WHERE did = 1;